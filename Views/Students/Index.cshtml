@model IEnumerable<CrudOperations.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h4>Student Register</h4>


    <table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rollno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class=" far fa-plus-square"></i>Add Student</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rollno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.StudentId"><button type="button" class="btn btn-success">Edit</button></a> |
              
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="text-danger ml-1" ><button type="button" class="btn btn-danger" onclick="return confirm('Are You Sure to delete this record')">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
